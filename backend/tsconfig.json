{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["shared/*"],
      "@middleware/*": ["middleware/*"],
      "@generated/*": ["generated/*"]
    },
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src", "shared", "middleware", "generated", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
