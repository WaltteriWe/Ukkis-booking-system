generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id                Int                @id @default(autoincrement())
  email             String             @unique
  name              String
  phone             String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  bookings          Booking[]
  snowmobileRentals SnowmobileRental[]
}

model SafariPackage {
  id          Int         @id @default(autoincrement())
  slug        String      @unique
  name        String
  description String?
  basePrice   Decimal     @db.Decimal(10, 2)
  durationMin Int
  capacity    Int         @default(8)
  difficulty  String      @default("Easy")
  imageUrl    String?
  active      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  bookings    Booking[]
  departures  Departure[]
}

model Departure {
  id                    Int                          @id @default(autoincrement())
  packageId             Int
  departureTime         DateTime
  capacity              Int
  reserved              Int                          @default(0)
  createdAt             DateTime                     @default(now())
  updatedAt             DateTime                     @updatedAt
  bookings              Booking[]
  package               SafariPackage                @relation(fields: [packageId], references: [id], onDelete: Cascade)
  snowmobileAssignments SafariSnowmobileAssignment[]
}

model Booking {
  id                   Int               @id @default(autoincrement())
  guestId              Int
  departureId          Int?
  participants         Int
  totalPrice           Float
  status               String            @default("confirmed")
  approvalStatus       String            @default("pending")
  adminMessage         String?
  rejectionReason      String?
  notes                String?
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  guestEmail           String
  guestName            String
  packageId            Int
  participantGearSizes Json?
  phone                String?
  bookingDate          String?
  bookingTime          String?
  paymentIntentId      String?           @unique
  paymentStatus        String            @default("pending")
  paymentMethod        String?
  departure            Departure?        @relation(fields: [departureId], references: [id])
  guest                Guest             @relation(fields: [guestId], references: [id])
  package              SafariPackage     @relation(fields: [packageId], references: [id], onDelete: Cascade)
  participantGear      ParticipantGear[]
}

model ParticipantGear {
  id        Int      @id @default(autoincrement())
  bookingId Int
  name      String
  boots     String
  gloves    String
  helmet    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  overalls  String
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
}

model Admin {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  passwordSalt String
  isSuper      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Snowmobile {
  id                Int                          @id @default(autoincrement())
  licensePlate      String?                      @unique
  name              String
  model             String?
  year              Int?
  status            String                       @default("available")
  createdAt         DateTime                     @default(now())
  updatedAt         DateTime                     @updatedAt
  safariAssignments SafariSnowmobileAssignment[]
  rentals           SnowmobileRental[]
}

model SafariSnowmobileAssignment {
  id           Int        @id @default(autoincrement())
  departureId  Int
  snowmobileId Int
  createdAt    DateTime   @default(now())
  departure    Departure  @relation(fields: [departureId], references: [id], onDelete: Cascade)
  snowmobile   Snowmobile @relation(fields: [snowmobileId], references: [id], onDelete: Cascade)

  @@unique([departureId, snowmobileId])
}

model SnowmobileRental {
  id               Int        @id @default(autoincrement())
  snowmobileId     Int
  guestId          Int
  startTime        DateTime
  endTime          DateTime
  totalPrice       Decimal    @db.Decimal(10, 2)
  status           String     @default("pending")
  notes            String?
  approvalStatus   String     @default("pending")
  adminMessage     String?
  rejectionReason  String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  guest            Guest      @relation(fields: [guestId], references: [id], onDelete: Cascade)
  snowmobile       Snowmobile @relation(fields: [snowmobileId], references: [id], onDelete: Cascade)
}

model ContactMessage {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  repliedAt DateTime?
  createdAt DateTime  @default(now())
}
